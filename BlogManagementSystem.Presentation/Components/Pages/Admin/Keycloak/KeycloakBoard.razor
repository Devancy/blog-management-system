@page "/admin/keycloak"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Keycloak Administration</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h3">Keycloak Identity Management</MudText>
                <MudText Typo="Typo.body1" Class="mt-1">
                    Manage users, roles, and groups in the Keycloak identity provider
                </MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudTooltip Text="Keycloak Documentation">
                    <MudIconButton Icon="@Icons.Material.Filled.Help" 
                                   Color="Color.Default"
                                   Href="https://www.keycloak.org/documentation" 
                                   Target="_blank" />
                </MudTooltip>
            </CardHeaderActions>
        </MudCardHeader>
        
        <MudCardContent>
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="Users" Icon="@Icons.Material.Filled.Person">
                    <KeycloakUsers />
                </MudTabPanel>
                <MudTabPanel Text="Roles" Icon="@Icons.Material.Filled.Badge">
                    <KeycloakRoles />
                </MudTabPanel>
                <MudTabPanel Text="Groups" Icon="@Icons.Material.Filled.Group">
                    <KeycloakGroups />
                </MudTabPanel>
            </MudTabs>
        </MudCardContent>
    </MudCard>
</MudContainer> 
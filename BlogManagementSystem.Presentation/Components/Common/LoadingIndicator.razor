@if (IsCircular)
{
    <MudProgressCircular Color="@Color" Indeterminate="true" Size="@Size" />
}
else
{
    <MudProgressLinear Color="@Color" Indeterminate="true" Class="@Class" />
}

@code {
    [Parameter] public bool IsCircular { get; set; } = false;
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public Size Size { get; set; } = Size.Medium;
    [Parameter] public string Class { get; set; } = "my-7";
}